<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="sale_order_total" inherit_id="portal.portal_sidebar" priority="17">

        <xpath expr="//div" position="attributes">
            <!-- ID For Easier CSS statements -->
            <attribute name="id">portalTotal</attribute>
        </xpath>

    </template>

    <template id="sale_order_portal_content" name="Sales Order Portal Content" inherit_id="sale.sale_order_portal_content" priority="17">
        <!-- Address -->
        <t t-if="product_documents" position="replace">

            <t t-set="company_name" t-value="sale_order.company_id.name"/>
            <t t-set="sale_order" t-value="sale_order.with_context(lang=request.lang)"/>
            <!-- <t t-set="clang" t-value="sale_order.partner_id.lang"/> -->
            <t t-set="clang" t-value="request.lang.code" />

            <div class="quote-address">
                <img t-if="sale_order.header_id.url[-4:] == '.jpg'" alt="Header Img"
                     t-attf-src="{{sale_order.header_id.url}}"/>
                <video t-if="sale_order.header_id.url[-4:] == '.mp4'" autoplay="true" loop="" alt="Header Img"
                       t-attf-src="{{sale_order.header_id.url}}"/>
                <div class="quote-address-block">
                    <t t-if="sale_order.partner_id.parent_id">
                        <h1 class="title" t-field="sale_order.partner_id.parent_id.name"/>
                    </t>
                    <t t-else="">
                        <h1 class="title" t-field="sale_order.partner_id.name"/>
                    </t>
                    <div class="hr"/>
                    <!--					<h2 class="subtitle" t-if="sale_order.partner_id.parent_id != False" t-field="sale_order.partner_id.parent_id.name" />-->
                    <h2 class="subtitle" t-field="sale_order.partner_id.street"/>
                    <h2 class="subtitle">
                        <span t-if="sale_order.partner_id.city != False" t-raw="sale_order.partner_id.city + ','"/>
                        <span t-field="sale_order.partner_id.state_id.code"/>
                        <span t-field="sale_order.partner_id.zip"/>
                        <span t-field="sale_order.partner_id.country_id.name"/>
                    </h2>
                </div>
            </div>
        </t>

        <!-- Hide Total On Rental Quotes -->
        <xpath expr="//div[@id=&quot;total&quot;]" position="attributes">
            <!-- <attribute name="t-if">sale_order.is_rental != True</attribute> -->
        </xpath>

        <!-- remove taxes column -->
        <!-- <xpath expr="//th[@id=&quot;taxes_header&quot;]" position="replace" />
        <xpath expr="//td[@id=&quot;taxes&quot;]" position="replace" /> -->

        <!--		commented due to the temporary-->
        <!--		&lt;!&ndash; <xpath expr="//t[@t-if=&quot;current_section and (line_last or sale_order.order_line[line_index+1].display_type == 'line_section')&quot;]//td" position="after"> &ndash;&gt;-->
        <!--        <xpath expr="//t[@t-if=&quot;current_section and (line_last or sale_order.order_line[line_index+1].display_type == 'line_section')&quot;]//td"-->
        <!--               position="attributes">-->
        <!--            <attribute name="t-if">line.name != '$hardware' and line.name != '$software' and line.name !=-->
        <!--                '$subscription'-->
        <!--            </attribute>-->
        <!--        </xpath>-->

        <tr t-if="current_section and (line_last or lines_to_report[line_index+1].display_type == 'line_section') and not line.is_downpayment"
            position="attributes">
            <attribute name="t-if">current_section and (line_last or lines_to_report[line_index+1].display_type ==
                'line_section') and not line.is_downpayment and line.name != '$hardware' and line.name != '$software'
                and line.name != '$subscription'
            </attribute>
        </tr>

        <!-- Quote Label -->
        <xpath expr="//table[@id=&quot;sales_order_table&quot;]" position="before">
            <h1>Quotation</h1>
            <p>Language:
                <t t-out="clang"/>
            </p>

            <!-- temporary style fixes -->
            <style>
                .sale_tbody &gt; tr &gt; td {
                padding: 0.01rem 0.01rem !important;
                }
                .quote-head &gt; td.text-left {
                padding: 26px !important;
                }
                #sales_order_table &gt; tbody &gt; tr &gt; td:nth-child(3) {
                text-align: center !important;
                }
                #quote_content {
                padding: 0px !important;
                }
                #portal_sale_content {
                padding: 30px !important;
                padding-right: 40px !important;
                padding-top: 0px !important;
                background-color: #24272A !important;
                }
                #details &gt; div.quote-address &gt; video {
                z-index: 1 !important;
                width: 100vw !important;
                background-color: black !important;
                }
                div.quote-address {
                background-color: black !important;
                }
                #quote_content {
                width: 100%
                }
                .quoteLineRowSection {
                padding: 5px !important;
                }
                #sales_order_table &gt; tbody &gt; tr.quoteLineRowSection &gt; td &gt; div:nth-child(2) &gt; label {
                padding: 5px !important;
                }
                td#subtotal {
                padding-right: 5px !important;
                }
                .quoteLineRowSection &gt; td {
                padding: 20px !important;
                }
            </style>


        </xpath>


        <!-- Remove Original Table Header-->
        <xpath expr="//table[@id=&quot;sales_order_table&quot;]/thead/tr" position="replace"/>

        <t t-set="lines_to_report" position="replace">
            <t t-set="lines_to_report" t-value="sale_order.order_line"/>
        </t>

        <!-- Info Sections -->
        <xpath expr="//table[@id=&quot;sales_order_table&quot;]/tbody/t[3]/tr" position="before">
            <t t-if="line.name == '$hardware'">
                <tr>
                    <td style="border-style: none;" colspan="100">
                        <t t-set="isPDF" t-value="False"/>
                        <t t-if="clang ==  'en_CA' or clang == 'en_US'" t-call="proquotes.renewal-hardware-english"/>
                        <t t-elif="clang == 'fr_CA'" t-call="proquotes.renewal-hardware-french"/>
                    </td>
                </tr>
            </t>
            <t t-if="line.name == '$software'">
                <tr>
                    <td style="border-style: none;" colspan="100">
                        <t t-call="proquotes.renewal-software"/>
                    </td>
                </tr>
            </t>
            <t t-if="line.name == '$subscription'">
                <tr>
                    <td style="border-style: none;" colspan="100">
                        <t t-call="proquotes.renewal-subscription"/>
                    </td>
                </tr>
            </t>
            <!-- Keep for backwards combatibility due to how Quotes Are Rendered -->
            <t t-if="line.name == '$rental_pricenote'">
                <tr>
                    <td style="border-style: none;" colspan="100">
                        <p class="rental_price_explain" t-if="clang == 'en_CA' or clang == 'en_US'">
                            * The final rental cost will be calculated once the equipement is returned.
                            Weekly rental cost is equivalent to 4x the indicated daily rental rate (above).
                            Monthly (30 days) rental cost is equivalent to 12x the indicated daily rental rate (above).
                        </p>
                        <p class="rental_price_explain" t-elif="clang == 'fr_CA'">
                            * Le coût final sera calculé lorsque l'équipement sera retourné.
                            Le taux de location à la semaine est équivalent à 4x le taux journalier ci-haut.
                            Le taux de location au mois (30 jours) est équivalent à 12x le taux journalier ci-haut.
                        </p>
                        <br/>

                        <t t-if="clang == 'en_CA' or clang == 'en_US'">
                            <span class="rental_price_estimate">Estimated rental cost of chosen hardware + accessories:
                                <span id="rental-estimate-total-english"/>
                            </span>
                        </t>
                        <t t-elif="clang == 'fr_CA'">
                            <span class="rental_price_estimate">Coût estimé de la location de l'équipement et les
                                accessoires:
                                <span id="rental-estimate-total-english"/>
                            </span>
                        </t>
                        <br/>
                        <br/>
                        <div class="rental_product_value" t-if="clang == 'en_CA' or clang == 'en_US'">
                            <span t-if="clang == 'en_CA' or clang == 'en_US'">Total Rental Value: 
                                <span id="total-rental-value-english"/>
                            </span>
                            <br/>
                            <span>
                                Please upload your proof of insurance for the total amount in the comments below:
                            </span>
                            <br/>
                        </div>
                        <div class=" rental_product_value" t-if=" clang== 'fr_CA'">
                            <span>Valeur locative totale:  
                                <span id="total-rental-value-french"/>
                            </span>
                            <br/>
                            <span>
                                Veuillez télécharger votre preuve d'assurance pour le montant total dans les
                                commentaires ci-dessous:
                            </span>
                            <br/>
                        </div>
                    </td>
                </tr>
            </t>
            <!--  Keep for Backwards Compatibility-->
            <t t-if="line.name == '$rental_address'">
                <t t-set="rental_estimate_display" t-value="False"/>
                <tr>
                    <td style="border-style: none;" colspan="100">
                        <t t-call="proquotes.rental_address_form"/>
                    </td>
                </tr>
            </t>

            <t t-if="line.name == '$rental_info'">
                <t t-set="rental_estimate_display" t-value="True"/>
                <tr>
                    <td style="border-style: none;" colspan="100">
                        <t t-call="proquotes.rental_address_form"/>
                    </td>
                </tr>
            </t>

            <!-- New Table Header Rows-->
            <t t-if="line.name == '$block' or line.name == '$block+'">
                <tr class="quote-head">
                    <td class="text-left">
                        <span t-if="clang == 'en_CA' or clang == 'en_US'" class="cHead"
                              style="padding-left: 20px !important;">Product
                        </span>
                        <span t-elif="clang == 'fr_CA'" class="cHead" style="padding-left: 20px !important;">Produit
                        </span>
                    </td>
                    <td t-if="line.name == '$block+'" class="text-left">
                        <span t-if="clang == 'en_CA' or clang == 'en_US'" class="cHead">Value</span>
                        <span t-elif="clang == 'fr_CA'" class="cHead">Valeur</span>
                    </td>
                    <td t-else=""/>
                    <td class="text-left">
                        <span t-if="clang == 'en_CA' or clang == 'en_US'" class="cHead">Qty</span>
                        <span t-elif="clang == 'fr_CA'" class="cHead">Qté</span>
                    </td>
                    <td class="text-left">
                        <span t-if="clang == 'en_CA' or clang == 'en_US'" class="cHead">Price</span>
                        <span t-elif="clang == 'fr_CA'" class="cHead">Prix</span>
                    </td>
                    <t t-if="any(line.discount for line in sale_order.order_line)">
                        <td class="text-left">
                            <span t-if="clang == 'en_CA' or clang == 'en_US'" class="cHead">Disc.%</span>
                            <span t-elif="clang == 'fr_CA'" class="cHead">Rabais%</span>
                        </td>
                    </t>
                    <!-- <td>
                        <span t-if="clang == 'en_CA' or clang == 'en_US'">Tax</span>
                        <span t-elif="clang == 'fr_CA'">Taxes</span>
                    </td> -->
                    <td class="text-left">
                        <span t-if="clang == 'en_CA' or clang == 'en_US'" class="cHead">Amount</span>
                        <span t-elif="clang == 'fr_CA'" class="cHead">Montant</span>
                    </td>
                </tr>
            </t>
        </xpath>

        <!-- Handle Special Sections Seperatly -->
        <xpath expr="//table[@id=&quot;sales_order_table&quot;]/tbody/t[3]/tr" position="attributes">
            <attribute name="t-if">line.name[0] != '$'</attribute>
        </xpath>

        <!-- Add Attributes For Easier CSS -->
        <xpath expr="//thead" position="attributes">
            <attribute name="class">bg-100 quotesTableHead</attribute>
        </xpath>

        <!-- Add Attributes For Easier CSS -->
        <xpath expr="//t[@t-foreach=&quot;lines_to_report&quot;]/tr" position="attributes">
            <attribute name="t-att-class">'quoteLineRowSection bg-200 font-weight-bold o_line_section' if
                line.display_type == 'line_section' else 'quoteLineRowNote font-italic o_line_note' if line.display_type
                == 'line_note' else 'quoteLineRow'
            </attribute>
        </xpath>

        <!--Add Check Box to control fold Section-->
        <xpath expr="//t[@t-if=&quot;line.display_type == 'line_section'&quot;]/td/span" position="replace">
            <div style="width: 75%; float: left;">
                <label t-attf-for="fold{{line}}{{line_index}}"
                       style="display: inline-block; width: 100%; height: 100%;">


                    <!-- DOWN ARROW THING -->
                    <span t-if="line.hiddenSection == 'no'" class="quote-folding-arrow">×</span>
                    <span t-else="" class="quote-folding-arrow">+</span>


                    <t t-if="line.special == 'optional'">
                        <input t-if="line.selected == 'true'" class="optionalSectionCheckbox" type="checkbox"
                               checked="true"/>
                        <input t-else="" class="optionalSectionCheckbox" type="checkbox"/>
                    </t>
                    <span t-if="line.name.strip()[0] != '#'" t-field="line.name"/>
                    <span t-elif="line.name.strip()[0] == '#'">
                        <t t-set="sname" t-value="line.name[1:].strip()"/>
                        <t t-call="proquotes.section_name_resolution"/>
                    </span>
                    <span class="line_id" t-attf-id="{{line}}"/>
                </label>

                <!--Apply Custom Class to Special Section Types if needed-->
                <t t-if="line.hiddenSection == 'no'">
                    <input t-if="line.special == 'multiple'" t-attf-id="fold{{line}}{{line_index}}"
                           class="foldInput multipleChoice" type="checkbox" style="display: none;"/>
                    <input t-elif="line.special == 'optional'" t-attf-id="fold{{line}}{{line_index}}"
                           class="foldInput optionalSection" type="checkbox" style="display: none;"/>
                    <input t-else="" t-attf-id="fold{{line}}{{line_index}}" class="foldInput" type="checkbox"
                           style="display: none;"/>
                </t>
                <t t-else="">
                    <input t-if="line.special == 'multiple'" t-attf-id="fold{{line}}{{line_index}}"
                           class="foldInput multipleChoice" type="checkbox" style="display: none;" checked="true"/>
                    <input t-elif="line.special == 'optional'" t-attf-id="fold{{line}}{{line_index}}"
                           class="foldInput optionalSection" type="checkbox" style="display: none;" checked="true"/>
                    <input t-else="" t-attf-id="fold{{line}}{{line_index}}" class="foldInput" type="checkbox"
                           style="display: none;" checked="true"/>
                </t>
            </div>

            <div style="width: 25%; float: right">
                <label class="subtotal-label" t-attf-for="fold{{line}}{{line_index}}"
                       style="display: inline-block; width: 100%; height: 100%; text-align: right;">
                    <span>
                        <strong t-if="clang == 'en_CA' or clang == 'en_US'" class="text-left subtotal-label"
                                style="font-weight: bolder">
                            Subtotal
                        </strong>
                        <strong t-if="clang == 'fr_CA'" class="text-left subtotal-label" style="font-weight: bolder">
                            Sous-total
                        </strong>
                    </span>
                    <span t-if="line.special != 'optional' or line.selected == 'true'"
                          class="subtotal-destination text-left" style="font-weight: 400 !important;"/>
                    <span t-elif="clang == 'en_CA' or clang == 'en_US'" class="text-left"
                          style="font-weight: 400 !important;">0.00 $
                    </span>
                    <span t-elif="clang == 'fr_CA'" class="text-left" style="font-weight: 400 !important;">$ 0.00</span>
                </label>
            </div>
        </xpath>

        <xpath expr="//t[@t-if=&quot;line.display_type == 'line_note'&quot;]/td" position="inside">
            <span class="line_id" t-attf-id="{{line}}"/>
        </xpath>

        <!--		commented due to the temporary issue-->
        <!--		&lt;!&ndash;No Subtotal if Next Element is Block(and current item is a section) or Current Item is a Special Section&ndash;&gt;-->
        <!--		<xpath expr="//t[@t-if=&quot;current_section and (line_last or sale_order.order_line[line_index+1].display_type == 'line_section')&quot;]/tr" position="attributes">-->
        <!--			<attribute name="t-if">line.name[0] != '$' and ((not line_index+1 &lt; len(sale_order.order_line)) or (line.display_type != 'line_section' or sale_order.order_line[line_index+1].name[:6] != '$block'))</attribute>-->
        <!--		</xpath>-->
        <!--		&lt;!&ndash; Hide Default Subtotal&ndash;&gt;-->
        <!--		<xpath expr="//t[@t-if=&quot;current_section and (line_last or sale_order.order_line[line_index+1].display_type == 'line_section')&quot;]/tr//strong" position="attributes">-->
        <!--			<attribute name="style">display: none;</attribute>-->
        <!--		</xpath>-->
        <!--		<xpath expr="//t[@t-if=&quot;current_section and (line_last or sale_order.order_line[line_index+1].display_type == 'line_section')&quot;]/tr//span" position="attributes">-->
        <!--			<attribute name="style">display: none;</attribute>-->
        <!--		</xpath>-->

        <!--		&lt;!&ndash;Mark Original Subtotal locations&ndash;&gt;-->
        <!--		<xpath expr="//t[@t-if=&quot;current_section and (line_last or sale_order.order_line[line_index+1].display_type == 'line_section')&quot;]/tr/td/span" position="attributes">-->
        <!--			<attribute name="class">subtotal-source</attribute>-->
        <!--		</xpath>-->


        <!-- Rental Item Value -->
        <xpath expr="//td[@id=&quot;product_name&quot;]" position="after">
            <t t-if="sale_order.is_rental == True">
                <td t-if="'CAD' in sale_order.currency_id.name" class="text-left rental_value_cell"
                    style="width: fit-content;">
                    <span t-if="line.product_id.is_software == False  and (clang == 'en_CA' or clang == 'en_US')"
                          t-esc="'$ {value:,.2f}'.format(value=line.product_id.cadVal)"
                          class="text-left itemValue test"/>
                    <span t-if="line.product_id.is_software == False  and clang == 'fr_CA'"
                          t-esc="'{value:,.2f} $'.format(value=line.product_id.cadVal)"
                          class="text-left itemValue test"/>
                </td>
                <td t-elif="'USD' in sale_order.currency_id.name" class="text-left rental_value_cell"
                    style="width: fit-content;">
                    <span t-if="line.product_id.is_software == False and (clang == 'en_CA' or clang == 'en_US')"
                          t-esc="'$ {value:,.2f}'.format(value=line.product_id.usdVal)"
                          class="text-left itemValue test"/>
                    <span t-if="line.product_id.is_software == False and clang == 'fr_CA'"
                          t-esc="'{value:,.2f} $'.format(value=line.product_id.usdVal)"
                          class="text-left itemValue test"/>
                </td>
            </t>
            <td t-else=""/>
        </xpath>

        <!--Apply HTML tags to description and Names And Add User Control Elements-->
        <xpath expr="//td[@id=&quot;product_name&quot;]" position="replace">
            <td id="product_name">
                <t t-if="line.optional == 'yes'">
                    <input t-if="line.selected == 'true'" type="checkbox" class="priceChange" checked="true"/>
                    <input t-else="" type="checkbox" class="priceChange"/>
                </t>
                <t t-else="">
                    <input t-if="line.selected == 'true'" type="radio" checked="true" style="display: none;"
                           class="priceChange"/>
                    <input t-else="" type="radio" style="display: none;" class="priceChange"/>
                </t>

                <!--Line Id For User Selection-->
                <div class="flex">
                    <span class="line_id" t-attf-id="{{line}}"/>

                    <span t-attf-class="optional{{line.optional}}" t-field="line.product_id.name"/>

                    <label t-attf-for="productFold{{line}}{{line_index}}" style="float: right;">
                    </label>
                    <input t-if="line.hiddenSection == 'no'" t-attf-id="productFold{{line}}{{line_index}}"
                           class="product_foldI" type="checkbox" style="display: none;"/>
                    <input t-else="" checked="true" t-attf-id="productFold{{line}}{{line_index}}" class="product_foldI"
                           type="checkbox" style="display: none;"/>
                    <div class="product_fold" style="width: 100%;">
                        <span style="color: #777;" t-raw="line.product_id.description_sale"/>
                    </div>
                </div>
            </td>
        </xpath>


        <!--End Multiple Choice Section Upon Optional Product-->
        <xpath expr="//t[@t-set=&quot;current_subtotal&quot;]" position="before">
            <t t-if="not current_section_ended">
                <t t-if="current_section and line.optional == 'yes' and current_section.special == 'multiple'"
                   t-set="current_section_ended" t-value="true"/>
            </t>
        </xpath>

        <xpath expr="//t[@t-if=&quot;line.display_type == 'line_section'&quot;]" position="inside">
            <t t-set="current_section_ended" t-value="false"/>
        </xpath>

        <!--Ensure Subtotal is only calculated if Item is selected and accounts for rental range-->
        <xpath expr="//t[@t-foreach='lines_to_report']//t[@t-set=&quot;current_subtotal&quot;]" position="replace">
            <t t-if="line.selected == 'true' and not current_section_ended">
                <t t-if="sale_order.is_rental == False or line.product_id.is_software or sale_order.rental_start == False or sale_order.rental_end == False">
                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>
                </t>
                <t t-elif="sale_order.rental_start != False and sale_order.rental_end != False">
                    <t t-set="sdate" t-value="str(sale_order.rental_start).split('-')"/>
                    <t t-set="edate" t-value="str(sale_order.rental_end).split('-')"/>
                    <t t-set="rentalDays"
                       t-value="(datetime.date(int(edate[0]), int(edate[1]), int(edate[2])) - datetime.date(int(sdate[0]), int(sdate[1]), int(sdate[2]))).days"/>
                    <t t-set="rentalMonths" t-value="rentalDays // 30"/>
                    <t t-set="rentalDays" t-value="rentalDays % 30"/>
                    <t t-set="rentalWeeks" t-value="rentalDays // 7"/>
                    <t t-set="rentalDays" t-value="rentalDays % 7"/>


                    <t t-set="rentalRate" t-value="0"/>
                    <t t-set="rentalDayRate" t-value="line.price_subtotal * rentalDays"/>
                    <t t-if="(rentalDayRate&gt; line.price_subtotal * 4)" t-set="rentalDayRate"
                       t-value="line.price_subtotal * 4"/>
                    <t t-set="rentalWeekDayRate" t-value="4 * line.price_subtotal * rentalWeeks + rentalDayRate"/>
                    <t t-if="(rentalWeekDayRate &gt; line.price_subtotal * 12)" t-set="rentalDayRate"
                       t-value="line.price_subtotal * 12"/>
                    <t t-set="rentalMonthRate" t-value="12 * line.price_subtotal * rentalMonths"/>
                    <t t-set="rentalRate" t-value="rentalRate + rentalMonthRate + rentalWeekDayRate"/>
                    <t t-set="current_subtotal" t-value="current_subtotal + rentalRate"/>
                </t>
            </t>
        </xpath>

        <!-- Section Rental Estimate Given Rental Dates -->
        <xpath expr="//t[@t-foreach='lines_to_report']//t[@t-set=&quot;current_subtotal&quot;]" position="replace">
            <t t-set="current_total" t-value="0"/>
            <t t-if="line.selected == 'true' and not current_section_ended">
                <t t-if="sale_order.is_rental == False or line.product_id.is_software or sale_order.rental_start == False or sale_order.rental_end == False">
                    <t t-set="current_total" t-value="current_total + line.price_subtotal"/>
                </t>
                <t t-elif="sale_order.rental_start != False and sale_order.rental_end != False">
                    <t t-set="sdate" t-value="str(sale_order.rental_start).split('-')"/>
                    <t t-set="edate" t-value="str(sale_order.rental_end).split('-')"/>
                    <t t-set="rentalDays"
                       t-value="(datetime.date(int(edate[0]), int(edate[1]), int(edate[2])) - datetime.date(int(sdate[0]), int(sdate[1]), int(sdate[2]))).days"/>

                    <t t-set="rentalMonths" t-value="rentalDays // 30"/>
                    <t t-set="rentalDays" t-value="rentalDays % 30"/>
                    <t t-set="rentalWeeks" t-value="rentalDays // 7"/>
                    <t t-set="rentalDays" t-value="rentalDays % 7"/>


                    <t t-set="rentalRate" t-value="0"/>
                    <t t-set="rentalDayRate" t-value="line.price_subtotal * rentalDays"/>
                    <t t-if="(rentalDayRate&gt; line.price_subtotal * 4)" t-set="rentalDayRate"
                       t-value="line.price_subtotal * 4"/>
                    <t t-set="rentalWeekDayRate" t-value="4 * line.price_subtotal * rentalWeeks + rentalDayRate"/>
                    <t t-if="(rentalWeekDayRate &gt; line.price_subtotal * 12)" t-set="rentalDayRate"
                       t-value="line.price_subtotal * 12"/>
                    <t t-set="rentalMonthRate" t-value="12 * line.price_subtotal * rentalMonths"/>
                    <t t-set="rentalRate" t-value="rentalRate + rentalMonthRate + rentalWeekDayRate"/>
                    <t t-set="current_total" t-value="current_total + rentalRate"/>
                </t>
            </t>
        </xpath>

        <!-- Format Price Dispaly -->
        <xpath expr="//span[@t-field=&quot;line.price_subtotal&quot;]" position="replace">
            <t t-if="clang == 'en_CA' or clang == 'en_US'" t-set="line_price"
               t-value="'$ {value:,.2f}'.format(value= line.price_subtotal)"/>
            <t t-elif="clang == 'fr_CA'" t-set="line_price"
               t-value="'{value:,.2f} $'.format(value= line.price_subtotal)"/>
            <span t-if="line.product_id.is_software == False"
                  class="proquotesLineTotal oe_order_line_price_subtotal pr-0 rental_rate_calc" t-out="line_price"/>
            <span t-elif="line.product_id.is_software == True"
                  class="proquotesLineTotal oe_order_line_price_subtotal pr-0" t-out="line_price"/>
            <style>
                #sales_order_table &gt; tbody &gt; tr.quoteLineRowSection &gt; td {
                padding: 20px !important;
                }
                .is-subtotal {
                display: none !important;
                }
                .quoteLineRow &gt; #product_name {
                padding: 20px !important;
                padding-top: 20px !important;
                padding-right: 0px !important;
                }
            </style>
        </xpath>

        <!--			this will commented and deprecated due to price_total field have no more-->
        <!--		<xpath expr="//span[@t-field=&quot;line.price_total&quot;]" position="attributes">-->
        <!--			<attribute name="class">proquotesLineTotal oe_order_line_price_total pr-0</attribute>-->
        <!--		</xpath>-->

        <!--Enable Variable Quantities-->
        <xpath expr="//span[@t-field=&quot;line.product_uom_qty&quot;]" position="replace">
            <t t-if="line.quantityLocked == 'yes'">
                <span class="qtySpan" t-if="line.product_uom_qty == round(line.product_uom_qty)"
                      t-esc="round(line.product_uom_qty)"/>
                <span t-else="" class="rp-20" t-field="line.product_uom_qty"/>
            </t>
            <t t-if="line.quantityLocked =='no'">
                <t t-set="qty" t-value="round(line.product_uom_qty)"/>
                <!-- <span t-out="qty" /> -->
                <input type="number" class="quantityChange" min="1" t-attf-value="{{qty}}"
                       style="display: inline; width: 60px;"/>
            </t>
        </xpath>

        <!-- Hide Uneeded Unit Column -->
        <xpath expr="//span[@t-field=&quot;line.product_uom&quot;]" position="replace"/>

        <!-- Add Attributes For Easier CSS -->
        <xpath expr="//t[@t-if=&quot;not line.display_type&quot;]/td[5]" position="attributes">
            <attribute name="t-attf-class">tax-column text-left {{ 'd-none d-md-table-cell' if report_type == 'html'
                else '' }} table-column-none
            </attribute>
        </xpath>

        <!-- Add Attributes For Easier CSS -->
        <xpath expr="//t[@t-foreach=&quot;lines_to_report&quot;]//td[3]" position="attributes">
            <attribute name="t-attf-class">text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}
                table-column-none
            </attribute>
        </xpath>

        <!-- Add Attributes For Easier CSS -->
        <xpath expr="//t[@t-foreach=&quot;lines_to_report&quot;]//td[4]" position="attributes">
            <attribute name="t-attf-class">tax-column text-left {{ 'd-none d-md-table-cell' if report_type == 'html'
                else '' }} table-column-none
            </attribute>
        </xpath>

        <!-- Add Attributes For Easier CSS -->
        <xpath expr="//t[@t-foreach=&quot;lines_to_report&quot;]//td[5]" position="attributes">
            <attribute name="t-attf-class">text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}
                table-column-none
            </attribute>
        </xpath>

        <!-- Quote Info -->
        <xpath expr="//section[@id=&quot;terms&quot;]" position="before">
            <div id="quote_disclaimer">
                <t t-set="currency_label" t-if="clang == 'fr_CA' and sale_order.currency_id.name == 'CAD'"
                   t-value="'canadiens'"/>
                <t t-set="currency_label" t-elif="clang == 'fr_CA' and sale_order.currency_id.name == 'USD'"
                   t-value="'américains'"/>
                <t t-set="currency_label" t-else="" t-value="sale_order.currency_id.name"/>
                <span t-if="clang == 'en_CA' or clang == 'en_US'">All prices in <t t-out="currency_label"/> dollars. Local sales tax &amp; delivery costs will be added to final invoice (if not already showing). The quote is valid for 30 days after submittal date.
                </span>
                <span t-elif="clang == 'fr_CA'">Tous les prix sont en dollars <t t-out="currency_label"/>. Les taxes de vente locale et les frais de livraison seront ajoutés à la facture finale (s'ils ne sont pas déjà affichés). Cette soumission est valide pour 30 jours après la date soumise.
                </span>
            </div>
            <div t-if="'abtech' in sale_order.company_id.name.lower()">
                <br/>
                <t t-if="clang == 'en_CA' or clang == 'en_US'">
                    <span class="white-text">R-E-A-L.iT works with partners for fulfillment of certain products and
                        therefore some or all of the quoted products may be invoiced and delivered by one of our
                        partners.
                    </span>
                </t>
                <t t-elif="clang == 'fr_CA'">
                    <span class="white-text">R-E-A-L.iT travaille avec des partenaires pour la fourniture de certains
                        produits et par conséquent, certains ou tous les produits cités peuvent être facturés et livrés
                        par l'un de nos partenaires.
                    </span>
                </t>
            </div>
            <t t-if="sale_order.is_rental == True">
                <input id="rental-terms-checkbox" type="checkbox" style="display:none" checked="true"/>
                <label for="rental-terms-checkbox">
                    <h1>
                        <strong class="white-text" id="terms_hidden">+</strong>
                        <strong class="white-text" id="terms_open">×</strong>
                        <strong class="white-text" t-if="clang == 'en_CA' or clang == 'en_US'">Terms and Conditions
                        </strong>
                        <strong class="white-text" t-if="clang == 'fr_CA'">Termes et Conditions</strong>
                    </h1>
                </label>
                <div id="rentalTerms" t-if="sale_order.is_rental == True" t-call="proquotes.rental_terms"/>
            </t>
            <section class="quoteConfig" style="display: none !important;">
                <span id="QCheader" t-attf-class="{{sale_order.header}}">Header</span>
                <span id="QCfooter" t-attf-class="{{sale_order.footer}}">Footer</span>
            </section>
        </xpath>
        <xpath expr="//section[@id='signature']" position="replace">
            <section t-if="sale_order.signature" id="signature" name="Signature">
                <div class="row mt-4" name="signature">
                    <div t-attf-class="#{'col-3' if report_type != 'html' else 'col-sm-7 col-md-4'} ml-auto text-center">
                        <h5>Signature</h5>
                        <img t-att-src="image_data_uri(sale_order.signature)"
                             style="max-height: 6rem; max-width: 100%;background-color:white !important;"/>
                        <p t-field="sale_order.signed_by"/>
                    </div>
                </div>
            </section>
        </xpath>
    </template>

    <!--Sign Page-->
    <template id="ba_sale_order_portal_template" name="Sales Order Portal template" inherit_id="sale.sale_order_portal_template" priority="17">

        <xpath expr="//div[@t-if=&quot;sale_order._has_to_be_signed() or sale_order._has_to_be_paid()&quot;]" position="before">

            <t t-set="clang" t-value="request.lang.code" />

            <p>Language:
                <t t-out="clang"/>
            </p>

            <div t-if="clang == 'fr_CA'" id="customer-acceptance">
                <h1 class="white-text">Acceptation du client</h1>
                <p>Avec votre signature, vous acceptez notre offre au nom de votre entreprise comme ci-dessus et vous confirmez que vous êtes autorisé à le faire.</p>
            </div>
            <div t-else="" id="customer-acceptance">
                <h1 class="white-text">Customer Acceptance</h1>
                <p>With your signature you accept our offer on behalf of your company as above and you confirm, that you are authorized to do so.</p>
            </div>
        </xpath>

        <xpath expr="//div[@id=&quot;quote_content&quot;]//b[1]" position="replace">
            <span>
                <strong t-field="sale_order.partner_id.name"/>
            </span>
        </xpath>

        <xpath expr="//t[@t-call=&quot;portal.signature_form&quot;]/t[2]" position="replace">
            <t t-set="default_name" t-value="env.user.name"/>
        </xpath>

        <xpath expr="//a[@t-att-href=&quot;sale_order.get_portal_url(report_type='pdf')&quot;]"
               position="replace"></xpath>

        <xpath expr="//div[@t-elif=&quot;sale_order._has_to_be_paid()&quot;]" position="after">
            <t t-set="clang" t-value="lang"/>
            <div class="col-sm-auto mt8">
                <a role="button" class="btn btn-secondary btn-block o_download_btn" id="quotesDownloadButton"
                   t-att-href="sale_order.get_portal_url(report_type='pdf')" title="Download">
                    <i class="fa fa-download"></i>
                    <t t-if="clang == 'en_CA' or clang == 'en_US'">Download</t>
                    <t t-elif="clang == 'fr_CA'">Télécharger</t>
                </a>
            </div>
            <br/>
        </xpath>

        <!-- <img id="footer-img" alt="Footer Img" t-attf-src="{{sale_order.footer_id.url}}"/> -->
        <xpath expr="//div[@id=&quot;sale_order_communication&quot;]" position="before">
            <img id="footer-img" alt="Footer Img" t-attf-src="{{sale_order.footer_id.url}}"/>
        </xpath>
    </template>

    <template id="User_Buttons" name="Client Side Buttons" priority="17"></template>

    <template name="portal_footer" id="portal_footer" inherit_id="portal.portal_layout">
        <xpath expr="//div[@id=&quot;wrap&quot;]" position="after">
            <t t-call="custom.custom-footer"/>
        </xpath>
    </template>

</odoo>